{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}